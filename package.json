{
  "name": "privmx-mcp-workspace",
  "private": true,
  "description": "PrivMX MCP Server monorepo workspace",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "mcp-server": "pnpm --filter @privmx/mcp-server",
    "mcp-server:dev": "pnpm --filter @privmx/mcp-server dev",
    "mcp-server:start": "pnpm --filter @privmx/mcp-server start",
    "mcp-server:test": "pnpm --filter @privmx/mcp-server test-option-a",
    "cli": "pnpm --filter @privmx/mcp-cli start",
    "cli:status": "pnpm --filter @privmx/mcp-cli start status",
    "cli:search": "pnpm --filter @privmx/mcp-cli start search",
    "cli:clean": "pnpm --filter @privmx/mcp-cli start clean",
    "setup": "pnpm install && pnpm build"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "eslint": "^9.28.0",
    "prettier": "^3.5.3",
    "turbo": "^2.5.4",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-mdx": "^3.1.0",
    "unist-util-visit": "^5.0.0"
  }
}
