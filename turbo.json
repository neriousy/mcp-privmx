{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "tsconfig.tsbuildinfo"],
      "env": ["NODE_ENV"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "lint:fix": {
      "dependsOn": ["^build"]
    },
    "check-types": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false
    }
  },
  "globalEnv": ["NODE_ENV"],
  "pipeline": {
    "@privmx/mcp-server#build": {
      "outputs": ["dist/**"]
    },
    "@mcp-privmx/ai-chat#build": {
      "dependsOn": ["@privmx/mcp-server#build"],
      "outputs": [".next/**"]
    }
  }
}
