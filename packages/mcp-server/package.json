{
  "name": "@privmx/mcp-server",
  "version": "1.0.0",
  "description": "PrivMX Documentation MCP Server - intelligent documentation access through vector embeddings",
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "privmx-mcp-server": "dist/server.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:components": "node dist/scripts/test-components.js",
    "test:integration": "jest --testNamePattern=\"Integration\"",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf dist",
    "index-docs": "tsx src/scripts/index-docs.ts",
    "generate-embeddings": "tsx src/scripts/generate-embeddings.ts",
    "test-embeddings": "tsx src/scripts/generate-embeddings.ts --test",
    "store-qdrant": "tsx src/scripts/store-in-qdrant.ts",
    "test-qdrant": "tsx src/scripts/store-in-qdrant.ts --test",
    "qdrant-stats": "tsx src/scripts/store-in-qdrant.ts --stats"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@privmx/shared": "workspace:*",
    "@qdrant/js-client-rest": "^1.14.1",
    "@types/markdown-it": "^14.1.2",
    "better-sqlite3": "^11.10.0",
    "dotenv": "^16.5.0",
    "gray-matter": "^4.0.3",
    "markdown-it": "^14.1.0",
    "openai": "^5.1.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "zod": "^3.25.49"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.29",
    "@types/uuid": "^10.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.4",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "privmx",
    "documentation",
    "ai",
    "vector-embeddings"
  ]
}
