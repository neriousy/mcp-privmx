{
  "name": "@privmx/mcp-server",
  "version": "1.0.0",
  "description": "PrivMX Code Generation MCP Server - intelligent API discovery and code generation for PrivMX applications",
  "type": "module",
  "main": "dist/langchain-server.js",
  "bin": {
    "privmx-mcp-server": "dist/langchain-server.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/langchain-server.ts",
    "start": "tsx src/langchain-server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf dist",
    "parse": "tsx src/scripts/parse-documents.ts",
    "build-api-index": "tsx src/scripts/build-api-index.ts",
    "extract-workflows": "tsx src/scripts/extract-workflows.ts",
    "generate-templates": "tsx src/scripts/generate-templates.ts",
    "build-knowledge": "npm run parse && npm run build-api-index && npm run extract-workflows && npm run generate-templates",
    "test-option-a": "tsx src/scripts/test-option-a.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "langchain": "^0.3.0",
    "@langchain/community": "^0.3.0",
    "@langchain/core": "^0.3.0",
    "@langchain/textsplitters": "^0.1.0",
    "tiktoken": "^1.0.17",
    "lodash": "^4.17.21",
    "p-limit": "^4.0.0",
    "p-retry": "^6.2.0",
    "better-sqlite3": "^11.10.0",
    "dotenv": "^16.5.0",
    "gray-matter": "^4.0.3",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-mdx": "^3.1.0",
    "unist-util-visit": "^5.0.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "zod": "^3.25.49"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.29",
    "@types/uuid": "^10.0.0",
    "@types/lodash": "^4.17.12",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.4",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "privmx",
    "code-generation",
    "api-discovery",
    "ai"
  ]
}
