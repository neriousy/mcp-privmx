# PrivMX MCP Server Configuration

# OpenAI Configuration (Required for Phase 4+)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=text-embedding-3-small
OPENAI_BATCH_SIZE=50

# Vector Database Configuration (ChromaDB)
VECTOR_DB_TYPE=chroma
VECTOR_DB_URL=http://localhost:8000
VECTOR_DB_COLLECTION=privmx-docs

# Chunking Configuration
MAX_CHUNK_SIZE=1500
OVERLAP_SIZE=200
CHUNKING_STRATEGY=hybrid

# Server Configuration
MCP_SERVER_NAME=privmx-docs
MCP_SERVER_VERSION=1.0.0
PORT=3000

# Phase 4: Embeddings & Vector Search
ENABLE_VECTOR_SEARCH=true
SIMILARITY_THRESHOLD=0.7
MAX_SEARCH_RESULTS=10

# Development Settings
NODE_ENV=development
LOG_LEVEL=info 